//create a function which identifies palindrome





def pal(str):
    str_len=len(str)
    print(str_len)
    half_len=int(str_len/2)
    print(half_len)
    Pal=True
    if str_len&1:
        for i in range(0,half_len):
            if str[i]!=str[str_len-i-1]:
                Pal=False
    else:
        for i in range(0,half_len):
            if str[i]!=str[str_len-i-1]:
                Pal=False
    if Pal:
        print('是')
    else:
        print('否')
str=input()
pal(str)
